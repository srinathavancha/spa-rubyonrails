<h2>Contact Us</h2>

<%= form_with model: @contact_us, url: contact_us_path, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :product_code, "Product" %>
    <%= form.collection_select :product_code, @products, :code, :name, prompt: "Select a Product" %>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>
