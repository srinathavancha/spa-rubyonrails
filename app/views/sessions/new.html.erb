<h1>Login</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :username, "Username or Email" %>
    <%= form.text_field :username, autofocus: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>
